<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".When_Logo_Btn_Clicked_Activity"
    android:background="@drawable/splash_gradiant"
    >

  <Button
      android:id="@+id/btn_to_accelerometer_sensor"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="80dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:backgroundTint="@color/lemonGreen"
      android:text="Accelerometer Sensor"
      android:textColor="@color/darkGrey"
      android:textSize="18dp"
      android:textStyle="bold"
      />

  <Button
      android:id="@+id/btn_test_xml"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      app:layout_constraintTop_toBottomOf="@id/btn_to_accelerometer_sensor"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:backgroundTint="@color/lemonGreen"
      android:text="Xml Test"
      android:textColor="@color/darkGrey"
      android:textSize="18dp"
      android:textStyle="bold"
      />

  <Button
      android:id="@+id/btn_fragment"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      app:layout_constraintTop_toBottomOf="@id/btn_test_xml"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:backgroundTint="@color/lemonGreen"
      android:text="Fragment"
      android:textColor="@color/darkGrey"
      android:textSize="18dp"
      android:textStyle="bold"
      />

  <Button
      android:id="@+id/btn_SliderImage"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      app:layout_constraintTop_toBottomOf="@id/btn_test_xml"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:backgroundTint="@color/lemonGreen"
      android:text="Slider Image"
      android:textColor="@color/darkGrey"
      android:textSize="18dp"
      android:textStyle="bold"
      />




</androidx.constraintlayout.widget.ConstraintLayout>